<div class="user-box">
  <h2 class="title-lg mt-lg"><%= @user.name %></h2>
  <p class="text-bold mt mb-lg">@<%= @user.nickname %></p>
  <% if current_user == @user %>
    <p class="mt mb-lg">
      <%= link_to fa_icon("pencil"), edit_user_path(@user) %>
    </p>
  <% end %>
</div>

<div class="container">
  <%= link_to "Спроси меня", new_question_path(user_id: @user.id),
    class: "button button-yellow" %>

  <p class="mt">
    <%= render "questions/form", question: @question %>
  </p>
</div>

<%= @questions.count %>
<% unless @questions.count == 0 %>
  <div class="container mt-sm">
    <h2 class="title-lg">
        <%= inclination(@questions.count, "вопрос", "вопроса", "вопросов") %>
    </h2>
  </div>

  <% @questions.each do |question| %>
    <div class="mt-sm container">
      <%= render question %>
    </div>
  <% end %>
<% else %>
  <div class="container mt-sm">
    <h2 class="title-lg text-grey text-center">
        У этого пользователя пока никто ничего не спросил &#9785;
    </h2>
  </div>
<% end %>
